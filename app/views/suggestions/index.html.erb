<%=render "shared/suggestion_header"%>
<%=link_to "掃除箇所の登録", new_suggestion_path%>
<div class='suggestion-contents' >
    <ul class='suggestion-lists'>
      <% @suggestions.each do |suggestion| %>
        <% if user_signed_in? && current_user.id == suggestion.user_id && suggestion.status == false %>
          <li class='list'>
            <%= suggestion.place %>
            <div class='form-wrap'>
              <div class="form-group">
                <div class="actions">
                  <%= button_to "掃除完了", suggestion_path(suggestion.id), method: :patch, class: "register-blue-btn" %>
                </div>
              </div>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
</div>

  <div class='form-wrap'>
    <div class="form-group">
      <div class="actions">
        <%= button_to "今日の掃除箇所を決める", suggestions_path, method: :get, class: "register-blue-btn" %>
      </div>
    </div>
  </div>

  <%# 画像投稿アイコン %>
<%=link_to new_suggestion_path do %>
  <div class='suggestion-btn'>
    <span class='desk-btn-text'>登録する</span>
    <span class='desk-btn-text'>
      <%= image_tag 'suggestion.png' , size: '50x50' ,class: "desk-btn-icon" %>
    </span>
  </div>
<% end %>